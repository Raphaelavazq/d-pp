# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Coming Soon Mode (set to true to enable password protection)
VITE_COMING_SOON_MODE=true
VITE_ACCESS_PASSWORD=your_password_here

# Development Mode (set to false when using real Firebase project)
VITE_USE_FIREBASE_EMULATOR=false

# Stripe Configuration (TEST MODE ONLY - Never commit real keys)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
# Note: Secret keys should only be in server-side environment, not frontend

# Admin Configuration
VITE_ADMIN_EMAIL=admin@yourdomain.com
